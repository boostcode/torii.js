<!DOCTYPE html>
<html ng-app="torii">
	<head>
    <base href="/">
		<meta charset="UTF-8">
		<title>Dashboard | <%= toriiTitle ? toriiTitle : 'Torii.js'%></title>
		<meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
		<!-- bootstrap 3.0.2 -->
		<link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
		<!-- font Awesome -->
		<link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
		<!-- Ionicons -->
		<link href="/css/ionicons.min.css" rel="stylesheet" type="text/css" />
		<!-- Theme style -->
		<link href="/css/AdminLTE.css" rel="stylesheet" type="text/css" />
		<!-- Datables style -->
		<link href="/css/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesnt work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		
		<script src="//code.jquery.com/jquery-2.1.1.min.js"></script>

    <!-- Angular.js -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"></script>
    <script type="text/javascript" src="/js/angular-cookie.js"></script>
    <script type="text/javascript" src="/js/torii.js"></script>
    <script type="text/javascript" src="/js/torii-login.js"></script>
    <script type="text/javascript" src="/js/torii-admin.js"></script>
		
		<!-- Cookie -->
		<script src="/js/jquery.cookie.js" type="text/javascript"></script>
		
		<!-- Bootstrap -->
		<script src="/js/bootstrap.min.js" type="text/javascript"></script>

		<!-- AdminLTE App -->
		<script src="/js/AdminLTE/app.js" type="text/javascript"></script>

		<!-- User Login -->
		<script type="text/javascript">
						
			$( document ).ready(function() {
				
				// logout
				$("#logout").click(function() {
														
					$.ajax({
						type: "POST",
						url: "/user/logout",
						data: userAndToken,
						success: function( data, status) {
												
							if(status == 'success' && data.action == 'logout'){
								
								$.removeCookie('toriijs');
								
								location.href="/auth/login";
								
							}else{
								$('#errordiv').show();
								$('#error').html('<i class="fa fa-times-circle-o"></i> Logout error, please notify MMN this problem');
							}
						},
						error: function ( req, status, error){
							$('#errordiv').show();
							$('#error').html('<i class="fa fa-times-circle-o"></i> '+error);
						}
					});
		
				});
			});
		</script>

	
	</head>
	<body class="skin-blue" ng-controller='AdminController as admin'>
		<!-- header logo: style can be found in header.less -->
		<header class="header">
			<a href="/admin" class="logo">
				<!-- Add the class icon to your logo image or logo icon to add the margining -->
				<%= toriiTitle ? toriiTitle : 'Torii.js'%>
			</a>

			<!-- Header Navbar: style can be found in header.less -->
			<nav class="navbar navbar-static-top" role="navigation">

				<div class="navbar-right">
					<ul class="nav navbar-nav">

						<!-- User Account: style can be found in dropdown.less -->
						<li class="dropdown user user-menu">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<i class="glyphicon glyphicon-user"></i>
								<span id="userNameProfile">User <i class="caret"></i></span>
							</a>
							<ul class="dropdown-menu">
								<!-- User image -->
								<li class="user-header bg-light-blue">
									<img src="/img/avatar.png" class="img-circle" alt="User Image" />
									<p id="userInfo">
										<b id="userNameProfileP">{{ admin.data.user.username }}</b>
										<small id="userRole">{{ admin.data.user.role }}</small>
									</p>
								</li>
								<!-- Menu Footer-->
								<li class="user-footer">
									<div class="pull-right">
										<a href="#" id="logout" class="btn btn-default btn-flat">Sign out</a>
									</div>
								</li>
							</ul>
						</li>
					</ul>
				</div>
			</nav>
		</header>
		<div class="wrapper row-offcanvas row-offcanvas-left">
			<!-- Left side column. contains the logo and sidebar -->
			<aside class="left-side sidebar-offcanvas">                
				<!-- sidebar: style can be found in sidebar.less -->
				<section class="sidebar">
					<!-- sidebar menu: : style can be found in sidebar.less -->
					<ul class="sidebar-menu">
						<li class="active">
							<a href="/admin">
								<i class="fa fa-dashboard"></i> <span>Dashboard</span>
							</a>
						</li>
					  <% if (logged) { %>	
						
              <% if( logged.isAdmin || logged.isDev ) {%>
						    <li class="treeview" ng-class="{active: isActive('/admin/user')}">
							    <a href="/admin/user">
								    <i class="fa fa-user"></i>
								    <span>Users</span>
								    <i class="fa fa-angle-left pull-right"></i>
							    </a>
							  <ul class="treeview-menu">
								  <li><a href="/admin/user/list"><i class="fa fa-angle-double-right"></i> List Users</a></li>
								  <li><a href="/admin/user/new"><i class="fa fa-angle-double-right"></i> Add new User</a></li>
							  </ul>
						  </li>
						  <%}%>
						
						  <% if( logged.isAdmin  || logged.isDev ) {%>
						  <li class="treeview" ng-class="{active: isActive('/admin/role')}">
							  <a href="/admin/role">
								  <i class="fa fa-group"></i>
								  <span>Roles</span>
								  <i class="fa fa-angle-left pull-right"></i>
							  </a>
							  <ul class="treeview-menu">
								  <li><a href="/admin/role/list"><i class="fa fa-angle-double-right"></i> List Roles</a></li>
								  <li><a href="/admin/role/new"><i class="fa fa-angle-double-right"></i> Add new Role</a></li>
							  </ul>
						  </li>
						  <%}%>
						
						  <% if( logged.isDev ) {%>
						  <li class="treeview" ng-class="{active: isActive('/admin/action')}">
							  <a href="/admin/action">
								  <i class="fa fa-bolt"></i>
								  <span>Actions</span>
								  <i class="fa fa-angle-left pull-right"></i>
							  </a>
							  <ul class="treeview-menu">
								  <li><a href="/admin/action/list"><i class="fa fa-angle-double-right"></i> List Actions</a></li>
								  <li><a href="/admin/action/new"><i class="fa fa-angle-double-right"></i> Add new Action</a></li>
							  </ul>
						  </li>
						  <%}%>
						
						  <li class="treeview" ng-class="{active: isActive('/admin/collections')}">
						    <% if( logged.isDev ) {%>
								  <a href="/admin/collections">
								    <i class="fa fa-archive"></i>
								    <span>Collections</span>
								    <i class="fa fa-angle-left pull-right"></i>
							    </a>
							    <ul class="treeview-menu">
								    <li><a href="/admin/collections"><i class="fa fa-angle-double-right"></i> List Collections</a></li>
								    <li><a href="/admin/collection/new"><i class="fa fa-angle-double-right"></i> Add new Colletion</a></li>
							    </ul>
						    <%}%>
						  </li>

              <li class="treeview" ng-repeat="collection in admin.data.colls" side-coll-list ng-class="{active: isActive('/admin/{{collection.name}}')}">
                <a href="/admin/{{collection.name}}">
								    <i class="fa fa-archive"></i>
                    <span>{{collection.name}}</span>
								    <i class="fa fa-angle-left pull-right"></i>
							    </a>
							    <ul class="treeview-menu">
								    <li><a href="/admin/{{collection.name}}/documents"><i class="fa fa-angle-double-right"></i> List {{collection.name}}s</a></li>
								    <li><a href="/admin/{{collection.name}}/new"><i class="fa fa-angle-double-right"></i> Add new {{collection.name}}</a></li>
								    <li ng-show="collection.import"><a href="/admin/{{collection.name}}/import"><i class="fa fa-angle-double-right"></i> Import {{collection.name}} via CSV</a></li>
							    </ul>
              </li>
            <% } %>
					</ul>
				</section>
				<!-- /.sidebar -->
			</aside>

			<!-- Right side column. Contains the navbar and content of the page -->
			<aside class="right-side">                
				<!-- Content Header (Page header) -->
				<section class="content-header">
					<h1>
						<%= toriiTitle ? toriiTitle : 'Torii.js'%>
						<small>Control panel</small>
					</h1>
					<ol class="breadcrumb">
						<li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
						<li class="active">Dashboard</li>
					</ol>
				</section>

				<!-- Main content -->
				<section class="content">
					
					<div class="form-group has-error" id="errordiv" style="display:none;">
						<label id="error" class="control-label" for="inputError"></label>
					</div>
				  
					<%- body %>

				</section><!-- /.content -->
			</aside><!-- /.right-side -->
		</div><!-- ./wrapper -->

	</body>
</html>
