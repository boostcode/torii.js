<% layout('layoutLogin') -%>

<div class="form-box" id="login-box">

	<div class="header"><%= toriiTitle ? toriiTitle : 'Torii.js'%></div>
	<form name="loginForm" ng-controller="LoginController as login" ng-submit="loginForm.$valid && login.signIn()" novalidate>
	
		<div class="body bg-gray">
			
			<div class="form-group has-error" ng-show="login.error" >
				<label class="control-label">Error: {{ login.error }}</label>
			</div>
			
			<div class="form-group">
				<input ng-model="login.username" type="email" class="form-control" placeholder="Email Address" required/>
			</div>
			
			<div class="form-group">
				<input ng-model="login.password" type="password" class="form-control" placeholder="Password" required/>
			</div>          

		</div>

		<div class="footer">                                                               
			<button type="submit" class="btn bg-olive btn-block" id="login" >Sign me in</button>
			<% if (toriiAllowPublicRegistration) { %>
				<a href="/auth/register">Not yet registered?</a>
			<% } %>                       
		</div>
	</form>
</div>

